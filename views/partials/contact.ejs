<div id="contact">
    <br><br><br><br>
    <section class="my-services">
        <h2 class="services-title" style="font-size:3rem;text-align: left;"><span style="font-size:2rem; color:#bf5e2e">05.</span> Contact</h2>
        <form action="/" method="POST">
        <div class="form-group col-lg-8" style="text-align:left">
            <label for="inputName1" >First Name</label>
            <input type="text" class="form-control input-sm" id="inputName1" name="fname" aria-describedby="fnameHelp" placeholder="Enter first name">
            <br>
            <label for="inputName2" >Last Name</label>
            <input type="text" class="form-control input-sm" id="inputName2" name="lname" aria-describedby="lnameHelp" placeholder="Enter last name">
            <br>
            <label for="inputContact" >Contact Number</label>
            <input type="text" class="form-control input-sm" id="inputContact" name="contact" aria-describedby="contactHelp" placeholder="Enter contact number">
            <br>
            <label for="inputEmail1">Email address</label>
            <input type="email" class="form-control" id="inputEmail1" name="email" aria-describedby="emailHelp" placeholder="Enter email">
        
        
            <br>
            <label for="formControlTextarea1">Message</label>
            <textarea class="form-control" id="formControlTextarea1" name="message" rows="3" placeholder="eg: I want a website for my business"></textarea>
            <br>
        </div>
        <button href="#home" type="submit" value="Submit" class="btn btn-primary" style="float:left;margin-left:15px;background-color: #bf5e2e; border-color: #bf5e2e">Submit</button>
        </form>
    </section>
    <br><br><br>
</div>